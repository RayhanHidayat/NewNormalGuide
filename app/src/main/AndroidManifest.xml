<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rayhan.newnormalguide">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_new_nomal_guide_white"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_new_nomal_guide_white"
        android:supportsRtl="true"
        android:theme="@style/Theme.NewNormalGuide">
        <activity android:name=".ui.detail_news.DetailNewsActivity"></activity>
        <activity android:name=".ui.detail_stats.DetailStatsActivity" />
        <activity android:name=".ui.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.host.HostActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>